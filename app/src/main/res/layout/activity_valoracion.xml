<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="food.codi.ValoracionActivity"
    android:fitsSystemWindows="true" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_negro"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|start" >

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/arciform"
                android:text="Califique el servicio"
                android:textColor="@color/naranja"
                android:textSize="25sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_margin="30dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center" >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvFotoRepartidor"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="20dp"
                            android:layout_margin="15dp" >

                            <com.android.volley.toolbox.NetworkImageView
                                android:id="@+id/nivFotoRepartidor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/tvNombresRepartidor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Nombres"
                                android:textAlignment="textStart"
                                android:textSize="25sp"
                                android:textColor="@color/naranja" />

                            <TextView
                                android:id="@+id/tvApellidosRepartidor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Apellidos"
                                android:textAlignment="textStart"
                                android:textSize="25sp"
                                android:textColor="@color/naranja" />

                            <RatingBar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="1"
                                android:max="5"
                                style="@style/Widget.AppCompat.RatingBar.Indicator" />

                        </LinearLayout>

                    </LinearLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Producto:"
                                android:textColor="@color/naranja"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvNombreProducto"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Nombre del producto"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Cantidad:"
                                android:textColor="@color/naranja"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvCantidad"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="1"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Precio:"
                                android:textColor="@color/naranja"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvPrecio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="S/ 0.00"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Tienda:"
                                android:textColor="@color/naranja"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvNombreProveedor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Nombre del proveedor"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Fecha:"
                                android:textColor="@color/naranja"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvFechaPedido"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="DD/MM/AAAA"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Dirección entregada:"
                                android:textColor="@color/naranja"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvDireccion"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="Dirección completa del destino"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:text="Total:"
                                android:textColor="@color/naranja"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tvTotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:text="S/ 0.00"
                                android:textColor="@color/negro"
                                android:fontFamily="@font/comfortaa_bold"
                                android:textSize="15sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:gravity="top"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" >

                            <EditText
                                android:id="@+id/etComentario"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Escriba aquí su comentario"
                                android:textColorHint="@color/naranja"
                                android:textColor="@color/negro"
                                android:layout_weight="12"
                                android:inputType="text"
                                android:imeOptions="actionDone" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnEnviarValoracion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Enviar valoración"
                android:background="@drawable/boton_naranja"
                android:textColor="@color/blanco"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="30dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
